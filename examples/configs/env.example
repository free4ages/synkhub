# Example Environment Variables for DataStores Configuration
# Copy this file to .env and fill in your actual values

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=synctool

# Production PostgreSQL
PROD_POSTGRES_HOST=prod-db.example.com
PROD_POSTGRES_PORT=5432
PROD_POSTGRES_USER=prod_user
PROD_POSTGRES_PASSWORD=your_prod_password
PROD_POSTGRES_DB=prod_synctool

# Analytics PostgreSQL
ANALYTICS_POSTGRES_HOST=analytics-db.example.com
ANALYTICS_POSTGRES_PORT=5432
ANALYTICS_POSTGRES_USER=analytics_user
ANALYTICS_POSTGRES_PASSWORD=your_analytics_password
ANALYTICS_POSTGRES_DB=analytics

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DB=synctool_mysql

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_clickhouse_password
CLICKHOUSE_DB=analytics

# DuckDB Configuration
DUCKDB_PATH=./data/synctool.duckdb

# AWS S3 Configuration
S3_BUCKET=synctool-data-lake
S3_PREFIX=synctool/
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1

# MinIO Configuration (S3-compatible)
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_BUCKET=synctool
MINIO_PREFIX=data/
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_REGION=us-east-1

# Redis Configuration (for scheduler locking)
REDIS_URL=redis://localhost:6379
